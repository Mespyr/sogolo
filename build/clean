#!/usr/bin/env sh

RUN() {
    echo $@
    $@
}

DELETE() {
    if [ -f $1 ]; then
        RUN rm $1
    fi
}

DELETE_DIR() {
    if [ -d $1 ]; then
        RUN rm $1 -r
    fi
}


if [ -f Makefile ]; then
    RUN make clean 
    RUN rm Makefile
fi

DELETE_DIR CMakeFiles/
DELETE cmake_install.cmake  
DELETE CMakeCache.txt 
DELETE compile_commands.json 
DELETE_DIR .cmake/